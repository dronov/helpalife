<%= simple_form_for(search_donor, :url => search_donors_path, :wrapper => :inline_form, :html => {class: 'form-inline', :method => :get} ) do |f| %>

    <%= f.input :blood_group, collection: User::BLOOD_GROUPS, :include_blank => "- Choose blood group -", :label => false, required: false %>

    <%= f.input :state_id, collection: State.order(:name),:include_blank => "- Select state -", :label => false, required: false %>

    <%= f.input :district_id, collection: State.order(:name), as: :grouped_select, group_method: :districts , :include_blank => "- Select district -", :label => false, required: false %>

    <%= f.button :submit, "Search donors" ,class:'btn btn-primary' %>

<% end %>