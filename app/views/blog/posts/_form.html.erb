<%= tinymce %>
<div id="main">
  <div class="container">
    <div>
      <h1>Post</h1>
    </div>
    <div class="post-form">
      <%= simple_form_for [:blog, @post], :html => { :novalidate => true } do |f| %>
        <div class="row">
          <%= f.input :title %>
        </div>
        <div class="row">
          <%= f.input :text, input_html: { class: "tinymce" } %>
        </div>
        <div class="row">
          <%= f.submit class: 'button-primary normal' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
