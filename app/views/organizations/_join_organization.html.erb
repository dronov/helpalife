<span id='org_notice' class='blood-hide' />
 

<% if @join_link %>
  <%= link_to 'Join Organization', 
    join_organizations_path(id: @organization), 
    method: :post, remote: true, class:'success btn-success' %>

<% else %>
  <%= link_to 'Leave Organization', 
    remove_organizations_path(id: @organization), 
    method: :post,remote: true, class: 'danger btn-danger' %>
<% end %> 